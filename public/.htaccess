<IfModule mod_expires.c>
  ExpiresActive on

  ExpiresDefault "access plus 1 month"

  <FilesMatch "\.(webp|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresDefault "access plus 1 year"
    AddHeader Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  <FilesMatch "\.js$">
    ExpiresDefault "access plus 1 year"
    AddHeader Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  <FilesMatch "\.css$">
    ExpiresDefault "access plus 1 year"
    AddHeader Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  <FilesMatch "\.html$">
    ExpiresDefault "access plus 1 hour"
    AddHeader Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>

  <FilesMatch "manifest\.json$">
    ExpiresDefault "access plus 7 days"
    AddHeader Cache-Control "public, max-age=604800, must-revalidate"
  </FilesMatch>

  <FilesMatch "sw\.js$">
    ExpiresDefault "access plus 1 day"
    AddHeader Cache-Control "public, max-age=86400, must-revalidate"
  </FilesMatch>
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  RewriteBase /

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [QSA,L]

  RewriteCond %{HTTP:X-Forwarded-Proto} !https
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>
